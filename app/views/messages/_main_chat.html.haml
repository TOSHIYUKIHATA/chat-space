.main-chat
  .chat-header
    .chat-header__left
      .chat-header__left__user
        = @group.name
      .chat-header__left__group
        Memberï¼š
        - @group.users.each do |user|
          = user.name
    .chat-header__right
      = link_to "Edit", edit_group_path(@group),class: "border-none", data:{"turbolinks" => false}, style: "color:#38AEF0"

  .chat-body
    = render @messages

  .chat-form
    =form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'filesend'
      = f.submit "Send", class: 'submit-btn'