.main-chat
  .chat-header
    .chat-header__left
      .chat-header__left__user
        %t ユーザー名:
      .chat-header__left__group
        %t グループ名:
    .chat-header__right
      %t EDIT

  .chat-body
    .chat-body__box
      .chat-body__box__header
        .chat-body__box__header__name
          %t TOSHIYUKI
        .chat-body__box__header__time
          %t **/**/**(*) **:**:**
      .chat-body__box__message
        %t TEST

  .chat-form
    %form.new_message
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "type a message"}
        %label{class: "input-box__image"}
          = icon('far', 'image')
          %input{type: "file",class: "input-box__image__file"}
      %input{type: "sumbit",class: "submit-btn",value: "Send"}
