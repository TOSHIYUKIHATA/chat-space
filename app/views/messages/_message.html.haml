.chat-body__box
  .chat-body__box__header
    .chat-body__box__header__name
      = message.user.name
    .chat-body__box__header__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-body__box__message
    - if message.content.present?
      .chat-body__box__message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?