.chat-side
  .chat-user
    .chat-user__name
      %t HataToshiyuki
    .chat-user__icon
      .chat-user__icon__left
        = link_to new_group_path, data:{"turbolinks" => false} do
          = icon('far', 'edit',  class: "chat-user__icon__left")
      .chat-user__icon__right
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog',  class: "chat-user__icon__right")
  .chat-group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class: "border-none" do
        .chat-group__name
          = group.name
        .chat-group__messages
          = group.show_last_message